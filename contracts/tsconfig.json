{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "hardhat", "mocha"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 